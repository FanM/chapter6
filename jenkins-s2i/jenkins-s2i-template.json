{
  "apiVersion": "v1",
  "kind": "Template",
  "labels": {
    "template": "jenkins-build-oia-template"
  },
  "message": "A Jenkins build-config template",
  "metadata": {
    "annotations": {
      "description": "Jenkins build config template",
      "iconClass": "icon-jenkins",
      "tags": "instant-app,jenkins"
    },
    "name": "jenkins-oia"
  },
  "objects": [
    {
      "apiVersion": "v1",
      "kind": "ImageStream",
      "metadata": {
        "name": "${JENKINS_SERVICE_NAME}"
      }
    },
    {
      "apiVersion": "v1",
      "kind": "BuildConfig",
      "metadata": {
        "name": "${JENKINS_SERVICE_NAME}"
      },
      "spec": {
        "output": {
          "to": {
            "kind": "ImageStreamTag",
            "name": "${JENKINS_SERVICE_NAME}:latest"
          }
        },
        "runPolicy": "Serial",
        "source": {
          "dockerfile": "FROM openshift/jenkins-2-rhel7\nUSER example",
          "git": {
            "uri": "${GIT_URL}",
            "ref": "${GITHUB_REF}"
          },
          "type": "Git"
        },
        "strategy": {
          "sourceStrategy": {
            "from": {
              "kind": "DockerImage",
              "name": "registry.access.redhat.com/openshift3/jenkins-2-rhel7:latest"
            }
          },
          "type": "Source"
        },
        "triggers": [
          {
            "type": "ImageChange"
          },
          {
            "type": "ConfigChange"
          }
        ]
      }
    }
  ],
  "parameters": [
    {
      "description": "Git Repository URL",
      "displayName": "Git Repository URL",
      "name": "GIT_URL",
      "value": "https://github.com/OpenShiftInAction/chapter6",
      "required": true
    },
    {
      "name": "CONTEXT_DIR",
      "displayName": "Context Directory",
      "description": "Set this to the relative path to your project if it is not in the root of your repository.",
      "value": "jenkins-s2i",
      "required": true
    },
    {
      "description": "The name of the repository branch to reference in the configuration",
      "displayName": "Branch",
      "name": "GITHUB_REF",
      "value": "master",
      "required": true
    },
    {
      "description": "The name of the OpenShift Service exposed for the Jenkins container.",
      "displayName": "Jenkins Service Name",
      "name": "JENKINS_SERVICE_NAME",
      "value": "jenkins",
      "required": true
    },
    {
      "description": "The name of the service used for master/slave communication.",
      "displayName": "Jenkins JNLP Service Name",
      "name": "JNLP_SERVICE_NAME",
      "value": "jenkins-jnlp"
    }
  ]
}
